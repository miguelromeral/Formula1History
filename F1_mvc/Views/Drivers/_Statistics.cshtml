@using F1_mvc.Models
@model List<object>

@{ 
    drivers driver = (drivers) Model[0];
    Model.RemoveAt(0);
}

<tr>
    <td>Seasons</td>
    <td>@Model[0]</td>
</tr>
<tr>
    <td>Races</td>
    <td>
    @Ajax.ActionLink(Model[1].ToString(),
            "GridRaceDriver",
            "races",
            new { id = driver.driverRef },
            new AjaxOptions
            {
                HttpMethod = "GET",
                UpdateTargetId = "details",
                InsertionMode = InsertionMode.Replace,
                OnSuccess = "afterLoadRaces()",
                LoadingElementId = "loading",
                LoadingElementDuration = 1000
            })
    </td>

</tr>
<tr>
    <td>Poles</td>
    <td>@Model[2]</td>
</tr>
<tr>
    <td>Fastest Laps (TBF)</td>
    <td>@Model[3]</td>
</tr>
<tr>
    <td>Wins</td>
    <td>@Model[4]</td>
</tr>
<tr>
    <td>Championships</td>
    <td>@Model[5]</td>
</tr>