@using F1_mvc.Models

@model IEnumerable<seasons>

@{
}

<div class="jumbotron">
    <h1><img src="~/images/streamline-icon-calendar-3@48x48.png" class="d-inline-block" />@ViewBag.Title</h1>
    <p class="lead">All the manufactorers that F1 has had so far.</p>
</div>

@Html.Action("GridSeasons", "Seasons")


@section scripts {


    @Scripts.Render("~/Scripts/jquery-3.3.1.min.js")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")
    @Scripts.Render("~/bundles/jqueryval")


    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap.min.js"></script>

    <script type="text/javascript">

        // Basic example
        $(document).ready(function () {
            $('#tableseasons').DataTable({
                "pagingType": "full_numbers",
                "order": [[1, "desc"]]
            });
            $('.dataTables_length').addClass('bs-select');
        });
    </script>

}